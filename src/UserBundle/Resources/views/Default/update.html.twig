{% extends 'Template.html.twig' %}
    {% block title %}Modifier le compte de {{ user.nom }} {{ user.prenom }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h2>
        {{ form_errors(form) }}

    </h2>


    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    {{ form_errors(form.nom) }}

                    <label for="exampleInputEmail1">Nom</label>
                    {{ form_row(form.nom) }}


                </div>




                <div class="form-group">
                    {{ form_errors(form.prenom) }}

                    <label for="exampleInputEmail1">Prenom</label>
                    {{ form_row(form.prenom) }}


                </div>

                <div class="form-group">
                    {{ form_errors(form.username) }}

                    <label for="exampleInputEmail1">Username</label>
                    {{ form_row(form.username) }}


                </div>

                <div class="form-group">
                    {{ form_errors(form.email) }}

                    <label for="exampleInputEmail1">Email address</label>
                    {{ form_row(form.email) }}


                </div>

                <div class="form-group">
                    {{ form_errors(form.tel) }}

                    <label for="exampleInputEmail1">Tél</label>
                    {{ form_row(form.tel) }}


                </div>


                <div class="form-group">
                    {{ form_errors(form.addresse) }}

                    <label for="exampleInputEmail1">Addresse</label>
                    {{ form_row(form.addresse) }}


                </div>



                <div class="form-group">
                    {{ form_errors(form.plainPassword) }}
                    {{ form_row(form.plainPassword) }}

                </div>

            </div>
        </div>
        <!-- /.box -->

        <!-- Form Element sizes -->

        <!-- /.box -->


        <!-- /.box -->

        <!-- Input addon -->

        <!-- /.box -->

    </div>


    <div class="col-md-6">
        <!-- Horizontal Form -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <div class="box-body">


                <div class="form-group">
                    {{ form_errors(form.idFiscale) }}

                    <label for="exampleInputEmail1">Identifiant Fiscale</label>
                    {{ form_row(form.idFiscale) }}


                </div>


                <div class="form-group">
                    {{ form_errors(form.fraiLiv) }}

                    <label for="exampleInputEmail1">Frais de Livraison</label>
                    {{ form_row(form.fraiLiv) }}


                </div>



                <div class="form-group">
                    {{ form_errors(form.roles) }}
                    {{ form_row(form.roles) }}

                </div>


                <div class="form-group">
                    {{ form_errors(form.notes) }}

                    <label for="exampleInputNotes">Notes</label>
                    {{ form_row(form.notes) }}


                </div>






            </div>

        </div>
        <!-- /.box -->
        <!-- general form elements disabled -->

        <!-- /.box -->
    </div>

    <center>


        <input type="submit" class="btn  btn-warning btn-lg" value="Mettre à jour"></input>




    </center>



    {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}