{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
        <li class="active">
            <a href="{{ path('_list_reclamation') }}">
                Reclamations
            </a>
        </li>
        <li class="active">
            Ajout Reclamation
        </li>
    </ol>

    <div class="box box-primary">


        {{ form_start(form, {'method': 'post', 'action': path('_create_reclamation'), 'attr': {'class': ''}}) }}

        {{ form_errors(form) }}

        <div class="box-header with-border">
            <h3 class="box-title">Ajouter une Reclamation</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Sujet</label>
                {{ form_row(form.sujet) }}
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Contenue</label>
                {{ form_row(form.description) }}
            </div>







        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>





{% endblock %}