{% extends 'Template.html.twig' %}
{% block body %}
    {% block title %}Ajout Demande{% endblock %}


    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
        <li class="active">
            <a href="{{ path('_list_demande') }}">
                Demandes
            </a>
        </li>
        <li class="active">
            Ajouer une demande
        </li>
    </ol>
    {{ form_start(form, {'method': 'post', 'action': path('_create_demande'), 'attr': {'class': ''}}) }}

    {{ form_errors(form) }}

    <div class="col-md-6">
    <div class="box box-primary">




        <div class="box-header with-border">
            <h3 class="box-title">Ajouter une demande </h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
            <div class="box-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Titre</label>
                    {{ form_row(form.titre) }}
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Nom & Prenom</label>
                    {{ form_row(form.nom_prenom_recept) }}
                </div>




                <div class="form-group">
                    <label for="exampleInputEmail1">Adresse</label>
                    {{ form_row(form.addresse_recept) }}
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">Tel</label>
                    {{ form_row(form.telephone_recept) }}
                </div>




                <div class="form-group">
                    <label for="exampleInputEmail1">Notes</label>
                    {{ form_row(form.note) }}
                </div>

            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

    </div>
    </div>


    <div class="col-md-6">
    <div class="box box-primary">

        <div class="box-body">



        <div class="box-header with-border">
            <h3 class="box-title"> </h3>
        </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Type Demande</label>
                {{ form_row(form.type) }}
            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Quantite</label>
                {{ form_row(form.quantite) }}
            </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Montant</label>
            {{ form_row(form.montant) }}
        </div>


            <div class="form-group">
                <label for="exampleInputEmail1">Taille</label>
                {{ form_row(form.tailleColis) }}
            </div>

        <div class="form-group">
            <label for="exampleInputEmail1"></label>
            {{ form_row(form.fragile) }}
        </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Description</label>
                {{ form_row(form.descProd) }}
            </div>









        </div>
    </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}

{% endblock %}